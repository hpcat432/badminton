.container {
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  height: 100%;
  background-color: #f5f5f5;
}

.activity-list {
  width: 100%;
}

.activity-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.activity-title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.activity-content {
  font-size: 28rpx;
  color: black;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.item-container {
  display: flex;
  flex-direction: row;
  align-items: center;
  margin-top: 10rpx;
  gap: 8rpx;
}

.item-icon {
  width: 32rpx;
  height: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.owner-avatar {
  width: 32rpx;
  height: 32rpx;
  border-radius: 50%;
  margin-right: 8rpx;
}