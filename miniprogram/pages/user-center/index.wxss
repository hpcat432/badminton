.page-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  position: relative;
}

.top_bg {
  width: 100%;
  height: 460rpx;
  background: linear-gradient(180deg, #1ce692 0%, #19d385 100%);
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 1;
}

.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 80rpx;
}

.avatar {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  border: 6rpx solid rgba(255, 255, 255, 0.8);
  background-color: #ffffff;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.nickname {
  margin-top: 24rpx;
  font-size: 40rpx;
  color: #ffffff;
  font-weight: 600;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.content-container {
  position: relative;
  z-index: 2;
  padding: 0 30rpx;
  margin-top: 460rpx;
}

.section-container {
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 0 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.08);
}

.section-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 0;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.05);
}

.section-item:last-child {
  border-bottom: none;
}

.section-item:active {
  background-color: rgba(0, 0, 0, 0.02);
}

.label {
  font-size: 32rpx;
  color: #333333;
  font-weight: 500;
}

.icon {
  width: 36rpx;
  height: 36rpx;
  opacity: 0.5;
}

.main_content {
  background-color: #fff;
  border-top-left-radius: 30rpx;
  border-top-right-radius: 30rpx;
  height: calc(100vh - 120rpx);
  position: relative;
}

.userinfo_container {
  display: flex;
  flex-direction: row;
  gap: 100rpx;
  align-items: center;
  position: absolute;
  top: -30rpx;
  margin-left: 30rpx;
  padding: 0rpx 60rpx;
}

.username {
  color: #333;
  font-size: 32rpx;
  margin-top: 20rpx;
  color: rgba(0, 0, 0, 0.9);
  max-width: 200rpx;
}

.settings_container {
  position: relative;
  top: 150rpx;
  padding: 0 40rpx;
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.grid_container {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-template-rows: repeat(2, auto);
  gap: 20rpx;
}

.grid_item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s ease;
}

.setting_item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 0rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.08);
  font-size: 28rpx;
}

.btn_login {
  background-color: aqua;
  padding: 0;
  margin: 0;
}

.left {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.contact-button {
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
  padding-left: 0rpx;
  margin: 0;
  width: 400rpx;
  font-weight: 400;
  font-size: 28rpx;
  color: rgba(0, 0, 0, 0.9);
  line-height: 56rpx;
  text-align: left;
}

.button-hover {
  background-color: #fff;
}

.setting_icon {
  width: 40rpx;
  height: 40rpx;
}

.setting_text {
  color: rgba(0, 0, 0, 0.9);
}

.arrow_icon {
  width: 30rpx;
  height: 30rpx;
}