.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

.scroll-container {
  flex: 1;
  overflow: hidden;
}

.bottom-button {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: row;
  width: 100%;
  padding: 32rpx;
  margin-bottom: 15rpx;
  background: #fff;
  box-shadow: 0 -2rpx 8rpx rgba(0,0,0,0.05);
}

.container > text {
  font-size: 32rpx;
  color: #333333;
}

.publish-btn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 300rpx;
  height: 80rpx;
  background: #150443;
  color: #ffffff;
  font-size: 32rpx;
  border-radius: 44rpx;
} 

.top-input-container {
  display: flex;
  align-items: center;
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx 32rpx;
  margin: 24rpx 32rpx 0 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: calc(100% - 32rpx);
  box-sizing: border-box;
}
.section-container {
  display: flex;
  flex-direction: column;
  background: #fff;
  border-radius: 16rpx;
  padding-left: 32rpx;
  padding-right: 32rpx;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  margin-top: 24rpx;
  margin-left: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0,0,0,0.05);
  width: calc(100% - 40rpx);
  box-sizing: border-box;
}

.section-item {
  display: flex;
  flex-direction: row;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  border-bottom: 0.5rpx solid #e0e0e066;
}

.section-item:last-child {
  border-bottom: none;
}

.label {
  font-size: 32rpx;
  color: #333;
  margin-right: 24rpx;
}

.name-input {
  flex: 1;
  font-size: 32rpx;
  border: none;
  background: transparent;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.name-input-margin-right {
  flex: 1;
  font-size: 32rpx;
  border: none;
  background: transparent;
  text-align: center;
  white-space: nowrap;
  overflow: hidden;
  margin-right: 55rpx;
  text-overflow: ellipsis;
}

.icon {
  width: 25rpx;
  height: 25rpx;
  margin-left: auto;
  margin-top: 10rpx;
}

.picker {
  flex: 1;
  font-size: 32rpx;
  color: #333;
  text-align: center;
  margin-right: 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.popup-content {
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-radius: 24rpx 24rpx 0 0;
  z-index: 1001;
  padding: 32rpx;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 32rpx;
}

.popup-body {
  flex: 1;
  overflow-y: auto;
  -webkit-overflow-scrolling: touch;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
  padding: 16rpx;
  border-bottom: 1rpx solid #eee;
}

.tag {
  display: inline-flex;
  align-items: center;
  background: #15044315;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #150443;
}

.tag-close {
  margin-left: 8rpx;
  color: #999;
  font-size: 32rpx;
}

.tag-input-container {
  flex: 1;
  min-width: 200rpx;
}

.tag-input {
  width: 100%;
  height: 56rpx;
  font-size: 28rpx;
  padding: 0 16rpx;
}

.tag-list {
  padding: 16rpx;
  width: 100%;
  margin-top: 16rpx;
}

.tag-item {
  padding: 24rpx 16rpx;
  font-size: 28rpx;
  color: #333;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}

.tag-item:last-child {
  border-bottom: none;
}

.selected-tags {
  flex: 1;
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-right: 16rpx;
}

.selected-tag {
  font-size: 24rpx;
  color: #150443;
  background: #15044315;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.placeholder {
  flex: 1;
  font-size: 28rpx;
  color: #999;
  margin-right: 16rpx;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
}

.supplement-item {
  align-items: center;
  padding: 24rpx 0;
}

.supplement-item .label {
  align-self: center;
}

.supplement-input {
  flex: 1;
  height: 160rpx;
  background: #fff;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-left: 30rpx;
  width: auto;
} 