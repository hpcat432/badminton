.page-container {
  min-height: 100vh;
  background-color: #ffffff;
}

.custom-nav {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  height: 88rpx;
  background-color: #1ce692;
  border-bottom: 1rpx solid #f5f5f5;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.back-icon {
  width: 40rpx;
  height: 40rpx;
}

.nav-title {
  flex: 1;
  text-align: center;
  color: #ffffff;
  font-size: 34rpx;
  font-weight: normal;
}

.content-container {
  margin-top: 88rpx;
  padding-top: calc(88rpx + env(safe-area-inset-top));
}

.activity-title {
  font-size: 50rpx;
  margin-top: 40rpx;
  font-weight: bold;
  margin-left: 40rpx;
  margin-bottom: 20rpx;
  color: #333333;
  background-color: #ffffff;
  border-radius: 8rpx;
}

.activity-item {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  margin-top: 25rpx;
  padding-bottom: 25rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
  border-bottom: 0.5rpx solid #e0e0e066;
}

.activity-item-small {
  display: flex;
  align-items: center;
  margin-left: 40rpx;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  background-color: #ffffff;
  border-radius: 8rpx;
}

.time-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.separate {
  background-color: #e0e0e066;
  margin-bottom: 20rpx;
  width: 100%;
  height: 15rpx;
}

.activity-item-text {
  font-size: 30rpx;
  font-weight: 350;
  margin-left: 10rpx;
}

.location-icon {
  width: 32rpx;
  height: 32rpx;
  margin-right: 20rpx;
}

.map-icon {
  width: 45rpx;
  height: 45rpx;
  margin-left: auto;
  margin-right: 40rpx;
}

.loading {
  text-align: center;
  color: #999999;
  font-size: 28rpx;
  padding: 40rpx 0;
}

.bottom-area {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  background-color: #ffffff;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  border-top: 1rpx solid #e0e0e0;
  padding-bottom: env(safe-area-inset-bottom);
  padding-right: 40rpx;
  gap: 20rpx;
}

.bottom-button {
  background-color: #000000;
  color: #ffffff;
  padding: 20rpx 40rpx;
  border-radius: 40rpx;
  font-size: 28rpx;
}

.edit-button {
  background-color: #1ce692;
}

.tags-container {
  padding: 0 30rpx;
  margin-bottom: 30rpx;
}

.tags-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.tag-item {
  background-color: #5adda0;
  padding: 5rpx 40rpx;
  border-radius: 15rpx;
  font-size: 24rpx;
  color: #fcfcfc;
}

.participants-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  padding: 20rpx 40rpx;
}

.participant-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  width: 120rpx;
}

.participant-avatar {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background-color: #f5f5f5;
  flex-shrink: 0;
}

.participant-name {
  font-size: 24rpx;
  color: #333;
  width: 100%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
}

.popup-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 1000;
}

.popup-content {
  position: fixed;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  background: #fff;
  border-radius: 24rpx;
  z-index: 1001;
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 80%;
  max-width: 600rpx;
}

.popup-title {
  font-size: 32rpx;
  font-weight: bold;
  text-align: center;
  margin-bottom: 32rpx;
}

.popup-textarea {
  width: 100%;
  min-height: 120rpx;
  border: 1rpx solid #e0e0e0;
  border-radius: 12rpx;
  padding: 16rpx;
  font-size: 28rpx;
  margin-bottom: 32rpx;
  box-sizing: border-box;
}

.popup-confirm-btn {
  width: 80%;
  height: 80rpx;
  background: #150443;
  color: #fff;
  font-size: 32rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 80rpx;
} 